<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/setting_bg"
    tools:context=".CardPreViewActivity" >
	<TextView
	    android:id="@+id/tv_intro"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/background_dark"
        android:textSize="30sp"
        android:text="申请人阅读："/>
	<TextView
	    android:id="@+id/tv_cntitle"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_intro"
        android:layout_marginTop="20dp"
        android:textColor="#00CD00"
        android:text="中国农业银行移动终端申请承诺"
        android:textSize="20sp"/>
	<TextView 
	    android:id="@+id/tv_main"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_cntitle"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/btZhangCheng"
            android:layout_width="450dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:background="@drawable/agree_btn"
            android:text="中国农业银行金穗信用卡章程"/>
        <Button 
            android:id="@+id/btHeYue"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_below="@id/btZhangCheng"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:background="@drawable/agree_btn"
            android:text="中国农业银行金穗信用卡领用合约"/>
        <Button 
            android:id="@+id/btBiaoZhun"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_below="@id/btHeYue"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:background="@drawable/agree_btn"
            android:text="中国农业银行金穗信用卡收费标准"/>
        <Button 
            android:id="@+id/btZhengXin"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_below="@id/btBiaoZhun"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:background="@drawable/agree_btn"
            android:text="中国农业银行金穗信用卡征信授权书"/>
    </RelativeLayout>
	<CheckBox
	    android:id="@+id/cb_agree"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="同意以上约定"/>
	<Button
        android:id="@+id/bt_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
	<Button
        android:id="@+id/bt_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/bt_accept"
        android:layout_marginRight="10dp"
        android:text="上一页"/>
</RelativeLayout>
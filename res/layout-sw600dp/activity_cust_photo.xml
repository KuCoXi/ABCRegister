<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CustPhotoActivity" >

    <Button
        android:id="@+id/bt_last"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="30sp"
        android:text="上一步"
        android:textColor="@color/background_dark" />

    <Button
        android:id="@+id/bt_accept"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="完成"
        android:textSize="30sp"
        android:textColor="@color/background_dark" />

    <LinearLayout
        android:id="@+id/llCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/btCamera"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="增加"
            android:textSize="30sp"
            android:textColor="@color/background_dark" />

        <Button
            android:id="@+id/btDelete"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="删除"
            android:textSize="30sp"
            android:textColor="@color/background_dark" />
    </LinearLayout>

    <Gallery
        android:id="@+id/gallery_flow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llCamera"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp" />

    <Button
        android:id="@+id/btPreView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:text="信息检查"
        android:textColor="@color/background_dark" />

    <Button
        android:id="@+id/btPrint"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="回单打印"
        android:textSize="30sp"
        android:visibility="invisible"
        android:textColor="@color/background_dark" />
    <!--
    <ImageView
        android:id="@+id/ivPicNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/pic_next"/>
    <ImageView
        android:id="@+id/ivPicLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/pic_last"/>
    -->

</RelativeLayout>